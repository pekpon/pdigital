<!DOCTYPE html>
<html>
<head>
  <title><% if @article.present? %>
		<%= @article.title %>
	<% else %>
		<%= Configuration.value(:title_site)%>
	<% end %></title>

	<%=  raw(Configuration.value(:openx_header)) %>

	<%= stylesheet_link_tag "application"  %>
	<%= javascript_include_tag "application" %>
	<%= include_imperavi_javascript %>
	<%= include_imperavi_stylesheet %>
	<%= csrf_meta_tags %>

	<%= render :partial => 'shared/facebook_tags' %>
	
	<%= render :partial => 'shared/analitycs_code' %>
	
	<link rel="icon" href="/favicon.ico" type="image/ico" />
	
	<%= auto_discovery_link_tag(:rss, request.env['HTTP_HOST']+"/rss.xml") %>
	
</head>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/ca_ES/all.js#xfbml=1&appId=210773058935367";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<body>
<div class="container">
	
	<%= render :partial => 'shared/usersblock' %>

	<%= render :partial => 'shared/header' %>

	<%= render :partial => 'shared/navigation' %>

	<%= render :partial => 'shared/categories' %>
	
	<%= render :partial => 'shared/info_bar' %>

	<%= render :partial => 'shared/alerts' %>

	<%= yield %>
	
	<%= render :partial => 'shared/footer' %>

</div>
</body>
</html>