<%= stylesheet_link_tag    "devise" %>

<div class="white">
	<div id="section_header"><%=t(:forgot_password)%></div>
		<div class="left_padding">
			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			  <%= devise_error_messages! %>
			<br>
			 <div><%= f.text_field :email, :placeholder => t(:email), :class => "input_signin" %></div>
			<br>
			 <div><%= f.submit :id => "signin_button", :class => "btn-primary span3", :value => t(:new_password) %></div>
			<% end %>

			<%= render :partial => "devise/shared/links" %>
		</div>
</div>