<div id="comment_form">
	<%= form_tag(article_comments_path, :method => "POST") do %>
		<%= text_area(:article_comment, :comment, :rows => 3, :class => "textarea_comment") %><br /><br />
		<%= hidden_field(:article_comment, :article_id, :value => @article.id) %>
		<%= submit_tag(t(:send), :class => "btn-primary") %>
	<% end %>
</div>