<div class="box <%= type %>">
	<span class="time"><%= object.created_at.strftime('%H:%M') %>h</span>
	<% if type == "article" %>
		<span class="image"><%= image_tag "ico/new.png" %></span>
		<span class="text"><%=t(:new_new)%><b><%= link_to object.title.slice(0,50)+"...", article_path(object) %></b></span>
	<% elsif type == "comment" %>
		<span class="image"><%= image_tag "ico/comment.png" %></span>
	<span class="text"><%=t(:new_comment_user)%> <b><%= object.user.username %></b> <%=t(:in_new)%> <b><%= link_to object.article.title.slice(0,50)+"...", article_path(object.article) %></b></span>
	<% else %>
		<span class="image"><%= image_tag "ico/vote.png" %></span>
		<span class="text"><%=t(:there_are_votes)%> <%= count %> <%=t(:comments_new)%> <b><%= link_to object.article_comment.article.title.slice(0,50)+"...", article_path(object.article_comment.article) %></b></span>
	<% end %>
</div>