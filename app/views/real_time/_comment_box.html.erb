<div class="box Comment">
	<span class="time"><%= object.created_at.strftime('%H:%M') %>h</span>
	
	<span class="image">	
		<span class="label label-success">
			<i class="icon-white icon-comment"></i> <%=t(:Comment)%>
		</span>
	</span>

	<span class="text">
		<% if subtype == "Article" %>
			<%= raw(t(:comment_new, :var => user)) %><b><%= link_to object.commentable.title , article_path(object.commentable) %></b>
		<% elsif subtype == "Debate" %>
			<%= raw(t(:comment_deb, :var => user)) %><b><%= link_to object.commentable.title , debate_path(object.commentable) %></b>
		<% else %>
			<%= raw(t(:comment_eve, :var => user)) %><b><%= link_to object.commentable.title , event_path(object.commentable) %></b>
		<% end %>
	</span>
</div>