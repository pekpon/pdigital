<%= stylesheet_link_tag    "the_mosts" %>

<% articles.each do |article| %>
	<div class="mostBoxContent">
		<div class="article_title"><%= link_to article.title, article_path(article) %></div>
		<div style="margin-bottom:5px;">
			<span class="article_author"><%= article.author.upcase %></span>
			<span class="article_date">&nbsp;&nbsp;|&nbsp;&nbsp;<%= article.category.name %> - <%= article.published_date %></span>
		</div>
		<div class="article_img_div">	
		<% if(article.images.first) %>
			<%= link_to (image_tag article.images.first.image.url(:medium) , :class => "article_img", :border => 0), article_path(article) %>
		<% end %>
		</div>
		<div class="article_info">
			<div class="article_comments">
				<%= image_tag "ico/comment.png", :class => "thumb_img" %> <%= pluralize(article.article_comments.count,t(:singular_comment),t(:plural_comments)) %>
			</div>
		</div>
	</div>
<% end %>