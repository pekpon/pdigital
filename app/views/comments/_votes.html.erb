<% if comment.voted(request.remote_ip) == false %>
<%= link_to image_tag('ico/good.png', :valign => '-6px'), vote_url(comment,1), :remote => true %> 
<%= link_to t(:vote_ok), vote_url(comment,1),  :remote => true, :class => "vote" %> | 
<%= image_tag "ico/bad.png", :valign => "-6px" %> 
<%= link_to t(:vote_ko), vote_url(comment,2), :remote => true %>.
<span class="result_vot <%= vote_status(comment.vots_result)%>"><%= comment.vots_result %></span><span class="total_vot"> (<%= comment.votes.count %> <%=t(:votes)%>)</span>
<% else %>
<%=t(:voted)%> <span class="result_vot <%= vote_status(comment.vots_result)%>"><%= comment.vots_result %></span><span class="total_vot"> (<%= pluralize(comment.votes.count,t(:singular_vote),t(:plural_votes))%>)</span>
<% end %>