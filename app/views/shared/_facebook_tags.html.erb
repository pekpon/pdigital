<% if @article.present? %>

	<meta property='og:title' content='<%= @article.title.gsub(/'/, "") %>' />
	<meta property='og:description' content='<%= @article.resume.gsub(/'/, "") %>' />
	<meta property='og:type' content='article' />
	<meta property='og:url' content='<%= request.protocol+request.host+request.fullpath %>' />
	
	<% if @article.images.first %>
		<meta property='og:image' content='<%= request.protocol+request.host+@article.images.first.image.url(:facebook) %>'/>
	<% else %>
		<meta property='og:image' content='<%= request.protocol+request.host+Configuration.image_url(:image_site) %>'/>
	<% end %>
	
	<meta property='og:site_name' content='<%=Configuration.value(:sitename)%>' />
	
<% elsif @event.present?%>
	<% if @event.name.present? %>
	<meta property='og:title' content='Esdeveniment: <%= @event.name.gsub(/'/, "") %>' />
	<% end %>
	<% if @event.description.present? %>
	<meta property='og:description' content='<%= @event.description.gsub(/'/, "") %>' />
	<% else %>
	<meta property='og:description' content='<%= t(:no_description)%>' />
	<% end %>
	<meta property='og:type' content='event' />
	<meta property='og:url' content='<%= request.protocol+request.host+request.fullpath %>' />
	<meta property='og:image' content='<%= request.protocol+request.host+image_path("events.png") %>'>
	<meta property='og:site_name' content='<%=Configuration.value(:sitename)%>' />
	
<% elsif @debate.present?%>
	<% if @debate.title.present? %>
	<meta property='og:title' content='Debat: <%= @debate.title.gsub(/'/, "") %>' />
	<meta property='og:description' content='<%= @debate.description.gsub(/'/, "") %>' />
	<meta property='og:type' content='activity' />
	<meta property='og:url' content='<%= request.protocol+request.host+request.fullpath %>' />
	<meta property='og:image' content='<%= request.protocol+request.host+Configuration.image_url(:image_site)%>'>
	<meta property='og:site_name' content='<%=Configuration.value(:sitename)%>' />
	<% end %>
<% else %>

	<meta property='og:title' content='<%=Configuration.value(:title_site).gsub(/'/, "") %>' />
	<meta property='og:description' content='<%=Configuration.value(:description_site).gsub(/'/, "") %>' />
	<meta property='og:type' content='website' />
	<meta property='og:url' content='<%= request.protocol+request.host+request.fullpath %>' />
	<meta property='og:image' content='<%= request.protocol+request.host+Configuration.image_url(:image_site)%>' />
	<meta property='og:site_name' content='<%=Configuration.value(:sitename)%>' />
	
<% end %>